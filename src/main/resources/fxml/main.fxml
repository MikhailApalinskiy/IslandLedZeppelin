<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.StackPane?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.javarush.island.apalinskiy.javafx.Controller"
            fx:id="root">

    <center>
        <HBox spacing="10.0" HBox.hgrow="ALWAYS">
            <ScrollPane fx:id="scrollPane" HBox.hgrow="ALWAYS">
                <GridPane fx:id="gridPane"/>
            </ScrollPane>

            <VBox fx:id="statsPanel" spacing="10.0" prefWidth="300.0" maxWidth="400.0" minWidth="250.0">
                <padding>
                    <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
                </padding>
                <Label text="Statistic:" style="-fx-font-weight: bold;"/>
                <TextArea fx:id="statsTextArea" editable="false" wrapText="true" VBox.vgrow="ALWAYS"/>
            </VBox>
        </HBox>
    </center>

    <bottom>
        <StackPane>
            <padding>
                <Insets top="10.0" bottom="10.0" left="10.0" right="10.0"/>
            </padding>
            <HBox alignment="CENTER" spacing="10.0">
                <Button text="START" onAction="#startSimulation"/>
                <Button text="STOP" onAction="#handleStop"/>
            </HBox>
            <Label text="Zoom: Ctrl + Mouse Wheel"
                   style="-fx-font-size: 10px; -fx-text-fill: gray;"
                   StackPane.alignment="BOTTOM_LEFT"/>
        </StackPane>
    </bottom>

</BorderPane>